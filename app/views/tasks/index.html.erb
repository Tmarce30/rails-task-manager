<h2>List of tasks</h2>

<% @tasks.each do |task| %>
  <h2><%= link_to task.name, task_path(task) %></h2>
  <p><%= task.details %></p>
  <p><%= task.finished %></p>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <%= link_to "update", edit_task_path(task) %>
<% end %>


<h2><%= link_to "Create a task", new_task_path %></h2>
